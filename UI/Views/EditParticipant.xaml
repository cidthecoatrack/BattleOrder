<Window x:Class="BattleOrder.UI.Views.EditParticipant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit" Height="129" Width="204" Icon="/BattleOrder.UI;component/Images/20 sided die.ico" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <CheckBox IsChecked="{Binding IsNpc}" Content="is an NPC" HorizontalAlignment="Left" Margin="59,40,0,0" VerticalAlignment="Top"/>
        <TextBox  Text="{Binding Name}" HorizontalAlignment="Left" Height="23" Margin="59,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Content="Close" Click="Close" HorizontalAlignment="Left" Margin="111,67,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Save" Command="{Binding SaveParticipantEditsCommand}" HorizontalAlignment="Left" Margin="31,67,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
